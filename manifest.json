{
  "manifest_version": 3,
  "name": "Save Middle-Click Links",
  "version": "1.0.0",
  "description": "Intercept middle-clicks on links: save the URL to a list instead of opening a new tab. Download the list anytime.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Saved Links"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}